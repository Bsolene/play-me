<div class="navbar-wagon hidden-xs hidden-sm">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag 'playME-logo.png' %>
  </a>

  <%= form_tag games_path, method: :get, class: "navbar-wagon-search text-center" do %>
    <%= text_field_tag :name, nil, class: "navbar-wagon-search-input", placeholder: "search for a game" %>
    <button type="submit" class="navbar-wagon-search-btn">
      <i class="fa fa-search"></i>
    </button>
  <% end %>

  <% if user_signed_in? %>
    <div class="link-title">
      <%= link_to user_path(current_user) do %>
        <span>pro</span><span>file</span>
      <% end %>
    </div>
    <div class="link-title">
      <%= link_to destroy_user_session_path, method: :delete do %>
        <span>log</span><span>out</span>
      <% end %>
    </div>
  <% else %>
    <div class="link-title">
      <%= link_to new_user_registration_path do %>
        <span>sign</span><span>up</span>
      <% end %>
    </div>
    <div class="link-title">
      <%= link_to user_session_path do %>
        <span>log</span><span>in</span>
      <% end %>
    </div>

  <% end %>
</div>

